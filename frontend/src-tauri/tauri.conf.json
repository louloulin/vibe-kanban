{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Vibe Kanban",
  "version": "0.0.143",
  "identifier": "com.vibekanban.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Vibe Kanban",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2024 Vibe Kanban Team",
    "category": "Developer Tool",
    "shortDescription": "AI coding agent orchestration platform"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "scope": []
    },
    "fs": {
      "scope": ["**"]
    },
    "clipboard-manager": true
  }
}
