{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vibe Kanban",
  "version": "0.0.143",
  "identifier": "com.vibekanban.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Vibe Kanban",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["src-tauri/icons/32x32.png", "src-tauri/icons/128x128.png", "src-tauri/icons/128x128@2x.png", "src-tauri/icons/icon.icns", "src-tauri/icons/icon.ico"],
    "copyright": "Copyright Â© 2024 Vibe Kanban Team",
    "category": "Developer Tool",
    "shortDescription": "AI coding agent orchestration platform"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "scope": []
    },
    "fs": {
      "scope": ["**"]
    },
    "clipboard-manager": true
  }
}
